<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center"
    tools:context=".register">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:background="@drawable/backward_arrow"
            android:layout_height="32dp"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:text="Don't Have an Account?"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="336dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_cg"
            android:fontFamily="@font/montserrat"
            android:hint="Username"
            android:paddingHorizontal="20dp"
            android:text="barwis"
            android:textColor="@color/bg"
            android:textColorHint="@color/bg"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="336dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_cg"
            android:fontFamily="@font/montserrat"
            android:hint="Email"
            android:paddingHorizontal="20dp"
            android:text="barwis@gmail.com"
            android:textColor="@color/bg"
            android:textColorHint="@color/bg"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="336dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_cg"
            android:fontFamily="@font/montserrat"
            android:hint="Name"
            android:paddingHorizontal="20dp"
            android:text="Wisnu"
            android:textColor="@color/bg"
            android:textColorHint="@color/bg"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="336dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_cg"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:text="123456"
            android:textColor="@color/bg"
            android:textColorHint="@color/bg"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="336dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_cg"
            android:backgroundTint="@color/login"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Create an Account"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:text="By creating an account, you agree to our\nTerms of Service and Privacy Policy"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>

</RelativeLayout>